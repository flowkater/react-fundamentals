{
    "env": {
        "browser": true,
        "es6": true
    },
    "plugin": ["react"],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures":{
            "jsx": true
        }
    }
}